<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.CityMapper">

    <select id="selectCites" resultType="hello.entity.City">
        SELECT id,
               name,
               code,
               created_at,
               updated_at
        FROM city
    </select>

    <select id="selectCityIdByCode" resultType="hello.entity.City">
        SELECT
        id,
        name,
        code,
        created_at,
        updated_at
        FROM city
        <if test="code != null">
            WHERE code = #{code}
        </if>
    </select>
    <select id="selectCityIdById" resultType="hello.entity.City">
        SELECT
        id,
        name,
        code,
        created_at,
        updated_at
        FROM city
        <if test="id != null">
            WHERE id = #{id}
        </if>
    </select>

</mapper>